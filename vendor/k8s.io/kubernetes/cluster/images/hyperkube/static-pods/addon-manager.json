{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "kube-addon-manager",
    "namespace": "kube-system",
    "version": "v1"
  },
  "spec": {
    "hostNetwork": true,
    "containers": [
      {
        "name": "kube-addon-manager",
        "image": "gcr.io/google-containers/kube-addon-manager-ARCH:v4",
        "resources": {
          "requests": {
            "cpu": "5m",
            "memory": "50Mi"
          }
        },
        "volumeMounts": [
          {
            "name": "addons",
            "mountPath": "/etc/kubernetes/",
            "readOnly": true
          }
        ]
      },
      {
        "name": "kube-addon-manager-data",
        "image": "REGISTRY/hyperkube-ARCH:VERSION",
        "command": [
          "/copy-addons.sh"
        ],
        "volumeMounts": [
          {
            "name": "addons",
            "mountPath": "/srv/kubernetes/",
            "readOnly": false
          }
        ]
      }
    ],
    "volumes":[
      {
        "name": "addons",
        "emptyDir": {}
      }
    ]
  }
}
